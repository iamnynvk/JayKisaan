<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_120dp"
    android:layout_height="@dimen/size_199dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/vege_cardView">

    <RelativeLayout
        android:id="@+id/main_relative_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vege_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/vege_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_25dp"
            android:layout_below="@+id/vege_image"
            android:fontFamily="@font/montserratmedium"
            android:gravity="center"
            android:text="Cotton"
            android:textColor="@color/headingColor"
            android:textSize="@dimen/size_13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vege_name"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginTop="2dp"
            android:text="â‚¹"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/size_12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vege_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vege_name"
            android:layout_marginLeft="@dimen/size_25dp"
            android:layout_marginTop="2dp"
            android:text="Price"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/size_12dp" />

        <TextView
            android:id="@+id/vege_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vege_price"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_4dp"
            android:text="590 kg"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/size_9dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/size_15dp"
            android:layout_height="@dimen/size_15dp"
            android:layout_below="@+id/vege_price"
            android:layout_marginLeft="@dimen/size_95dp"
            android:layout_marginTop="@dimen/size_3dp"
            android:src="@drawable/ic_baseline_white" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="@dimen/size_10dp"
            android:layout_height="@dimen/size_10dp"
            android:layout_below="@+id/vege_quantity"
            android:layout_marginLeft="@dimen/size_6dp"
            android:layout_marginTop="@dimen/size_6dp"
            android:src="@drawable/ic_baseline_live_location" />

        <TextView
            android:id="@+id/vege_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vege_quantity"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:fontFamily="@font/montserratmedium"
            android:text="Ahmedabad"
            android:textColor="@color/buttonColor3"
            android:textSize="@dimen/size_8dp" />

        <ProgressBar
            android:id="@+id/progressBarofcard_vege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@android:color/black" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>